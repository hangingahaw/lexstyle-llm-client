{
  "name": "@lexstyle/llm-client",
  "version": "0.1.0",
  "description": "Shared LLM client for lexstyle text-correction tools",
  "author": "Haihang Wang",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "typecheck:test": "tsc --noEmit -p tsconfig.test.json",
    "prepublishOnly": "npm run typecheck && npm test && npm run build"
  },
  "keywords": [
    "llm", "openai", "anthropic", "legal", "typography", "text-correction"
  ],
  "engines": { "node": ">=18" },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hangingahaw/llm-client.git"
  },
  "homepage": "https://github.com/hangingahaw/llm-client#readme",
  "bugs": { "url": "https://github.com/hangingahaw/llm-client/issues" },
  "dependencies": {
    "openai": "^4.50.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  }
}
